<Window x:Class="Movies_player.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Movies_player"
        mc:Ignorable="d"
        Title="Movie Player" Height="450" Width="800">

    <WrapPanel Background="Black">
        <Label Name="labelmoviePlayer" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Width="791" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="0,10,0,0">Movie Player</Label>
        <TextBox x:Name="PathName" Foreground="White" Margin="0,0,10,0" Background="Black" BorderBrush="White" >C:/</TextBox>
        <Button Width="25" Foreground="White" BorderBrush="#FF19FF00" Background="Black" Margin="10,0,0,0">...</Button>
        <ProgressBar x:Name="Progression" Width="100" Height="25" Background="#FFCACACA" ></ProgressBar>

    </WrapPanel> >
            

       

    
</Window>
